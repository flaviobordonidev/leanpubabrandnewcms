<%# == Meta_data ============================================================ %>

<% provide(:html_head_title, "#{t '.html_head_title'}") %>
<% provide(:menu_nav_link_eg_posts, "active") %>

<%# == Meta_data - end ====================================================== %>

<p id="notice"><%= notice %></p>

<h1>Eg Posts</h1>

<table>
  <thead>
    <tr>
      <th>Meta title</th>
      <th>Meta description</th>
      <th>Headline</th>
      <th>Incipit</th>
      <th>User</th>
      <th>Pubblicato</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @eg_posts.each do |eg_post| %>
      <tr>
        <td><%= eg_post.meta_title %></td>
        <td><%= eg_post.meta_description %></td>
        <td><%= eg_post.headline %></td>
        <td><%= eg_post.incipit %></td>
        <td><%= eg_post.user_id %></td>
        <td><%= eg_post.published_at %></td>
        <td><%= link_to 'Show', eg_post %></td>
        <td><%= link_to 'Edit', edit_eg_post_path(eg_post) %></td>
        <td><%= link_to 'Destroy', eg_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%#= sanitize pagy_nav(@pagy) %>
<%= sanitize pagy_bootstrap_nav(@pagy) %>
<br>

<%= link_to 'New Eg Post', new_eg_post_path %>
