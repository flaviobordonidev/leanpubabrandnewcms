<p style="color: green"><%= notice %></p>

<%#= render @user %>
<div id="<%= dom_id @user %>">

  <% if @user.avatar_image.attached? %>
    <p><%= image_tag @user.avatar_image.variant(resize_to_limit: [100, 100]) %></p>
  <% else %>
    <p>Nessuna immagine presente</p>
  <% end %>

  <p>
    <strong>Username:</strong>
    <%= @user.username %>
  </p>

  <p>
    <strong>First name:</strong>
    <%= @user.first_name %>
  </p>

  <p>
    <strong>Last name:</strong>
    <%= @user.last_name %>
  </p>

  <p>
    <strong>Location:</strong>
    <%= @user.location %>
  </p>

  <p>
    <strong>Bio:</strong>
    <%= @user.bio %>
  </p>

  <p>
    <strong>Phone number:</strong>
    <%= @user.phone_number %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @user.email %>
  </p>

  <p>
    <strong>Encrypted password:</strong>
    <%= @user.encrypted_password %>
  </p>

  <p>
    <strong>Reset password token:</strong>
    <%= @user.reset_password_token %>
  </p>

  <p>
    <strong>Remember created at:</strong>
    <%= @user.remember_created_at %>
  </p>

</div>


<div>
  <%= link_to "Edit this user", edit_user_path(@user, shown_fields: 'account') %> |
  <%= link_to "Edit this user password", edit_user_path(@user, shown_fields: 'password') %> |
  <%= link_to "Edit this user all", edit_user_path(@user, shown_fields: 'all') %> |
  <%= link_to "Back to users", users_path %>

  <%= button_to "Destroy this user", @user, method: :delete %>
</div>
