<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @lesson.name %>
</p>

<p>
  <strong>Note:</strong>
  <%= @lesson.note %>
</p>

<h2>Steps</h2>
<% for step in @lesson.steps %>
    <ul>
      <li><%= step.question %></li>
  </ul>
<% end %>

<%= link_to 'Edit', edit_lesson_path(@lesson) %> |
<%= link_to 'Add Step', lesson_steps_path(@lesson) %> |
<%= link_to 'Back', lessons_path %>
