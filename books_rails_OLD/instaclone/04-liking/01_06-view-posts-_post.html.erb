<div class="post">
  <div class="post-author">
    <div class="avatar avatar-<%= rand(1..27) %>"></div>
    <div><%= post.user.username %></div>
  </div>
  <div class="post-body">
    <span><%= post.title %></span>
  </div>
  <div class="post-actions">
    <div class="post-actions-like"></div>
    <%= link_to likes_path(post), class: "post-actions-like" %>
    <div class="post-actions-comments">4 comments</div>
  </div>
  <div class="post-comments">
    <div class="comment">
      <span class="comment-author">joe</span>
      This is something I said
    </div>
    <div class="comment">
      <span class="comment-author">joe</span>
      This is something I said
    </div>
  </div>
</div>